<Page
    x:Class="AttendanceMugd.noticeAdd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttendanceMugd"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Image HorizontalAlignment="Center" Height="238" 
        		Margin="0,0,0,0" VerticalAlignment="Top" Width="497"
        		x:Name="ImageBoxn" Source="Assets/MUGD.jpg"
        		Stretch="Fill"/>
        <Grid Width="auto" Height="Auto" HorizontalAlignment="Center" Margin="0,238,0,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="85"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <!--<TextBlock Text="Title" Foreground="Black" Margin="0,15,0,0" Grid.Column="0" Grid.Row="0" FontSize="34" TextAlignment="Justify"/>
            <TextBlock Text="Venue" Foreground="Black" Margin="0,15,0,0" Grid.Column="0" Grid.Row="1" FontSize="34" TextAlignment="Justify"/>
            <TextBlock Text="Description" Foreground="Black" Margin="0,15,0,0" Grid.Column="0" Grid.Row="2" FontSize="34" TextAlignment="Justify"/>
            <TextBlock Text="Date" Foreground="Black" Margin="0,15,0,0" Grid.Column="0" Grid.Row="3" FontSize="34" TextAlignment="Justify"/>
            <TextBlock Text="Type" Foreground="Black" Margin="0,15,0,0" Grid.Column="0" Grid.Row="4" FontSize="34" TextAlignment="Justify"/>-->
            <TextBox x:Name="Timen" Width="auto" Background="White" Height="80" Foreground="Black" Margin="0,0,0,0" Grid.Column="0" Grid.Row="2"  FontSize="34" TextAlignment="Justify" PlaceholderText="Enter Time" BorderBrush="#FF0E0202" BorderThickness="0,0,0,2"/>
            <TextBox x:Name="Titlen" Width="auto" Background="White" Height="80" Foreground="Black" Margin="0,0,0,0" Grid.Column="0" Grid.Row="0"  FontSize="34" TextAlignment="Justify" PlaceholderText="Enter Title" BorderBrush="#FF0E0202" BorderThickness="0,0,0,2"/>
            <TextBox x:Name="Venuen" Width="auto"  Background="White" Height="80" Foreground="Black" Margin="0,0,0,0" Grid.Column="1" Grid.Row="0" FontSize="34" TextAlignment="Justify" PlaceholderText="Enter Venue" BorderBrush="#FF0E0202" BorderThickness="0,0,0,2"/>
            <Button x:ConnectionId='1' x:Name="Descn" Width="auto"  Background="White" Height="80" Foreground="Black" Margin="0,0,0,0" Grid.Column="1" Grid.Row="1" FontSize="34"                       Content="{Binding}" BorderBrush="#FF0E0202" BorderThickness="0,0,0,2"/>
            <DatePicker x:Name="daten" Grid.Column="1" Grid.Row="2"  />
            <TextBox x:Name="issuedn" Width="auto"  Background="White" Height="80" Foreground="Black" Margin="0,0,0,0" Grid.Column="0" Grid.Row="1" FontSize="34" TextAlignment="Justify" PlaceholderText="Issued By" BorderBrush="#FF0E0202" BorderThickness="0,0,0,2"/>

            <Button x:ConnectionId='2' x:Name="imgn" Grid.Row="3" Grid.Column="0" Foreground="Black"  Content="{Binding}" FontSize="26" HorizontalAlignment="Center"                      />
            <!--<TextBox x:Name="Roll" Width="auto"  Background="White" Height="80" Foreground="Black" Margin="0,0,0,0" Grid.Column="1" Grid.Row="3" FontSize="34" TextAlignment="Justify" PlaceholderText="Enter Roll No." BorderBrush="#FF0E0202" BorderThickness="0,0,0,2"/>-->

            <Button x:ConnectionId='3' x:Name="submitn"
                Grid.ColumnSpan="1" Grid.Column="1" 
                    Grid.Row="4" Width="Auto" Margin="0,0,0,0" 
                    Height="80" Content="Submit" Foreground="White" FontSize="34"
                                         Background="#FF0808EA" HorizontalAlignment="Stretch">

            </Button>
            <Button x:ConnectionId='4' x:Name="backn"
                Grid.Column="0" 
                    Grid.Row="4" Width="Auto" Margin="0,0,0,0" 
                    Height="80" Content="Back" Foreground="White" FontSize="34"
                                       Background="#FF0808EA" HorizontalAlignment="Stretch">

            </Button>
            <ComboBox x:Name="typen" Grid.Column="1" Grid.Row="3" PlaceholderText="Select Type" FontSize="34">
                <x:String>Sponsored</x:String>
                <x:String>MUGD</x:String>
            </ComboBox>
        </Grid>
        <ProgressBar x:Name="myProgressBar" Visibility="Collapsed"  HorizontalAlignment="Left" Height="768" Margin="0,0,0,0" VerticalAlignment="Top" Width="1356" Foreground="#FF4E07F5" BorderBrush="#FFF70808" Background="#597E7070" />
    </Grid>
</Page>

