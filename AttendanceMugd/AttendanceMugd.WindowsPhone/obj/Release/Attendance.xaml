<Page
    x:Class="AttendanceMugd.Attendance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttendanceMugd"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid Background="White">
        <Image HorizontalAlignment="Left" Height="108" 
        		Margin="40,52,0,0" VerticalAlignment="Top" Width="305"
        		x:Name="ImageBox" Source="Assets/MUGD.jpg"
        		Stretch="UniformToFill"/>
        <Button x:ConnectionId='1' x:Name="submit"
                    Width="209" Margin="96,376,0,189" 
                    Height="75" Content="Submit" Foreground="Black" FontSize="34"
                                          RenderTransformOrigin="1.63,0.782">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF03911" Offset="0"/>
                    <GradientStop Color="#FFEEEE1F" Offset="1"/>
                    <GradientStop Color="#FF13640A" Offset="0.307"/>
                    <GradientStop Color="#FF121A6C" Offset="0.593"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <TextBox x:Name="Box" Background="AntiqueWhite"   HorizontalAlignment="Left" Margin="40,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296" Height="69"/>
        <TextBlock Text="Enter Roll No" Foreground="Black" HorizontalAlignment="Left" Margin="40,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="251"/>
        <ProgressBar x:Name="myProgressBar" Visibility="Collapsed"  HorizontalAlignment="Left" Height="768" Margin="0,0,0,0" VerticalAlignment="Top" Width="1356" Foreground="#FF4E07F5" BorderBrush="#FFF70808" Background="#597E7070" />

    </Grid>
</Page>

